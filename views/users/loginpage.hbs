<section class="vh-100">
    <div class="container-fluid">
      <div class="d-flex justify-content-center p-5">
        <div class="row">
          <div class="log text-black p-2 border border-success  border-opacity-10">

            <div class="d-flex align-items-center h-custom-2 px-5  mt-5 pt-5 pt-xl-0 mt-xl-n5">
              <form style="width: 23rem;" action="/" method="POST">
              
                <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">User Log in</h3>
                <div class="form-outline mb-4">
                  <input type="email" id="form2Example18" class="form-control form-control-lg" name="email" placeholder="Email address" />
                </div>
                <div class="form-outline mb-4">
                  <input type="password" id="form2Example28" class="form-control form-control-lg" name="password" placeholder="Password" />
                </div>
                <div class="pt-1 mb-4">
                  <button class="btn btn-info btn-lg btn-block text-white w-100" type="submit">LOGIN</button>
                </div>
                {{#if loginERR}}
                <h4 class="text-danger">{{loginERR}}</h4>
                {{/if}}
                
                <p>Don't have an account? <a href="/signup" class="link-info text-decoration-none">Register here</a></p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
